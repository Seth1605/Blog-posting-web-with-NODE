<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Blogs</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <%- include('./partials/nav')  %>

    <div class="container">
        <section id="view-blogs">
            <h1>Blog</h1>
                <% if(blogs.length > 0){%>
                <% blogs.forEach(blogs => { %>
                <div class="blog">
                <h2><%= blogs.title  %></h2>
                <p><%= blogs.content  %></p>
                </div>

                <% }); %>
                <% }else{ %>
                <p>noBlog</p>
                <% }%>       
        </section>
    </div>
</body>
</html>

