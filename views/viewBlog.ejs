<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Blogs</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="icon" type="image/png" href="/img/blogWeb_logo_trp.png">
</head>
<body>
    <%- include('./partials/nav')  %>

    <div class="container">
        <section id="view-blogs">
            <h1>Blog</h1>
                <% if (blogs.length > 0) { %>
                    <% blogs.forEach(blog => { %>
                        <div class="blog">
                            <h2><%= blog.title %></h2>
                            <p><%= blog.content %></p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="no-blog">No Blog Available</p>
                <% } %>       
        </section>
    </div>

    <%- include('./partials/footer') %>
</body>
</html>

